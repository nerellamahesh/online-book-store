  <%= form_for :order, :url => { :controller => :orders, :action => :save_order } do |form| %>


      <legend>Please Enter Your Details</legend>
  <div>

        <%= form.label :fname, "First_Name:" %>

        <%= form.text_field :fname, :size => 40 %>

      </div>
  <div>

        <%= form.label :lname, "Last_Name:" %>

        <%= form.text_field :lname, :size => 40 %>

      </div>

      
      <div>

        <%= form.label :address, "Address:" %>

        <%= form.text_area :address, :rows => 3, :cols => 40 %>

      </div>

      <div>

        <%= form.label :city, "City:" %>

        <%= form.text_field :city, :size => 40 %>

      </div>
      <div>

        <%= form.label :state, "State:" %>

        <%= form.text_field :state, :size => 40 %>

      </div>
      <div>

        <%= form.label :zipcode, "Zipcode:" %>

        <%= form.text_field :zipcode, :size => 40 %>

      </div>

  <div>
  <%= form.label :country, "Country:" %>

        <%= form.text_field :country, :size => 40 %>

      </div>
   <div>
      <%= form.label :card_number, "Card Number:" %>

        <%= form.text_field :card_number, :size => 40 %>
  </div>
  <div>
      <%= form.label:card_code, "Security Code on Card (CVV)" %>
      <%= form.text_field :card_code, :size => 40 %>
  </div>
  <div>
    <%= form.label :month, "Month:" %>
    <%= form.select :month, 1..12 %>
    <%= form.label :year, "Year:"%>
    <%= form.select :year, Date.today.year..8.years.from_now.year %>
    
  </div>
